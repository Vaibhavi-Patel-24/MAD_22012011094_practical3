<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/web_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web Url:"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/enter_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Url"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toEndOf="@id/web_url"
        app:layout_constraintEnd_toStartOf="@+id/browse_button"
        app:layout_constraintBaseline_toBaselineOf="@id/web_url"
        />
    <Button
        android:id="@+id/browse_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse"
        android:layout_marginTop="35dp"
        app:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintStart_toEndOf="@id/enter_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/enter_url"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone no:"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/web_url"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/enter_phone_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Phone no."
        android:layout_marginTop="35dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toEndOf="@id/phone_no"
        app:layout_constraintEnd_toStartOf="@+id/call_button"
        app:layout_constraintBaseline_toBaselineOf="@id/phone_no"
        />
    <Button
        android:id="@+id/call_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:layout_marginTop="35dp"
        app:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintStart_toEndOf="@id/enter_phone_no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/enter_phone_no"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/call_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Log:"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/phone_no"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/call_log_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="call Log"
        android:layout_marginTop="35dp"
        app:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/call_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/call_log"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery:"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/call_log"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/gallery_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:layout_marginTop="35dp"
        app:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/call_log_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/gallery"
        android:layout_marginLeft="5dp"/>


    <TextView
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera:"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/gallery"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:layout_marginTop="35dp"
        app:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/gallery_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/camera"
        android:layout_marginLeft="5dp"/>


    <TextView
        android:id="@+id/alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm:"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/camera"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/alarm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm"
        android:layout_marginTop="35dp"
        app:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/camera_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/alarm"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login:"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/alarm"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/login_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="35dp"
        app:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/alarm_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/login"
        android:layout_marginLeft="5dp"/>







</androidx.constraintlayout.widget.ConstraintLayout>